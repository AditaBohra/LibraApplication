<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/edit_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint=" Task Title"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:background="@drawable/editext_rounded_shape"
        android:hint=" Task Description"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_task_title" />

    <TextView
        android:id="@+id/edit_task_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Select Date"
        android:editable="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_task_desc" />

    <EditText
        android:id="@+id/edit_task_assignto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Assign To.."
        android:inputType="text"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_task_date" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_yellow_background"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_task_assignto" />


</androidx.constraintlayout.widget.ConstraintLayout>