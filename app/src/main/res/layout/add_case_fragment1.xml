<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_case_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Case No"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edit_court_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Court Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_case_no" />

    <EditText
        android:id="@+id/edit_judge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Judge Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_court_name" />

    <EditText
        android:id="@+id/edit_party1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Party1 Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_judge" />

    <EditText
        android:id="@+id/edit_party2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Party2 Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_party1" />


    <EditText
        android:id="@+id/edit_lawyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Enter Lawyer Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_party2" />

    <TextView
        android:id="@+id/edit_select_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Select Team"
        android:editable="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_lawyer" />



    <TextView
        android:id="@+id/selectedTeamText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selected Team : "
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:background="@drawable/editext_rounded_shape"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_select_team" />


    <TextView
        android:id="@+id/edit_select_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Select Client"
        android:editable="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectedTeamText" />

    <TextView
        android:id="@+id/selectedCivilianText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selected Civilian : "
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:background="@drawable/editext_rounded_shape"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_select_client" />


    <TextView
        android:id="@+id/edit_case_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Select Hearing Date"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/selectedCivilianText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:id="@+id/text_select_category"
        app:layout_constraintTop_toBottomOf="@+id/edit_case_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/radio_group_category"
        app:layout_constraintTop_toBottomOf="@+id/text_select_category">

        <RadioButton
            android:id="@+id/pending_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Pending"/>

        <RadioButton
            android:id="@+id/dispose_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Dispose"/>

    </RadioGroup>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_text"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_yellow_background"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_category"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>