<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_high_court"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="High Court of Bombay, Aurangabad Bench"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_respondent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Petitiooner/Respondent"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_high_court" />


    <Spinner
        android:id="@+id/spinner_side"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_respondent" />


    <EditText
        android:id="@+id/edit_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Registered Year"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_side" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_text"
        android:textAllCaps="false"
        android:background="@drawable/rounded_yellow_background"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>