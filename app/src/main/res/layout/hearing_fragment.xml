<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">


    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/add_hearing_icon"
        android:layout_marginTop="10dp"
        android:id="@+id/add_hearing_button"/>

    <FrameLayout
        android:id="@+id/search_framelayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_hearing_button"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_hearing_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="140dp"
        app:layout_constraintTop_toBottomOf="@+id/search_framelayout_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>