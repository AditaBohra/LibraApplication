<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">


    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/add_hearing_icon"
        android:layout_marginTop="10dp"
        android:id="@+id/add_hearing_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_hearing_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="56dp"
        app:layout_constraintTop_toBottomOf="@+id/add_hearing_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please click on plus button to add hearings.."
        android:textSize="20sp"
        android:fontFamily="@font/arvo"
        android:id="@+id/hearings_empty_text"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>