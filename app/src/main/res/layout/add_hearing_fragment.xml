<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/case_no_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:autofillHints="Choose Case number"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:id="@+id/text_select_category"
        app:layout_constraintTop_toBottomOf="@+id/case_no_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:id="@+id/radio_group_category_hearing"
        app:layout_constraintTop_toBottomOf="@+id/text_select_category">

        <RadioButton
            android:id="@+id/civil_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Civil"/>

        <RadioButton
            android:id="@+id/criminal_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxEms="5"
            android:layout_marginLeft="10dp"
            android:text="Criminal DailyList"/>

        <RadioButton
            android:id="@+id/other_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Other"/>

    </RadioGroup>


    <EditText
        android:id="@+id/add_judges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Add Judges"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_category_hearing" />

<!--    <Button-->
<!--        android:layout_width="28dp"-->
<!--        android:layout_height="28dp"-->
<!--        android:id="@+id/add_judge_button"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/add_judges"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/add_judges"-->
<!--        android:background="@drawable/add_hearing_icon"/>-->

    <TextView
        android:id="@+id/edit_hearing_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="date"
        android:textSize="20sp"
        android:background="@drawable/editext_rounded_shape"
        android:hint="Select Hearing Date"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/add_judges" />

    <Button
        android:id="@+id/hearing_continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_text"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_yellow_background"
        app:layout_constraintTop_toBottomOf="@+id/edit_hearing_date"/>



</androidx.constraintlayout.widget.ConstraintLayout>