<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">


    <ImageView
        android:id="@+id/img_add_case"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/add_case_ico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="Add case form court forum"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/img_add_case"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_add_case_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="select a court from which you want to add a case"
        app:layout_constraintTop_toBottomOf="@+id/img_add_case" />

    <EditText
        android:id="@+id/edit_search_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/search_icon"
        android:hint="Party, Court name, Judges"
        app:layout_constraintTop_toBottomOf="@+id/text_add_case_instruction" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search_case">


        <ImageView
            android:id="@+id/img_add_party_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/party_name_ico"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/add_case_number_card"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/add_case_number_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/add_case_number_ico"
            app:layout_constraintLeft_toRightOf="@+id/img_add_party_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@+id/img_add_party_name"
            app:layout_constraintRight_toRightOf="@+id/img_add_party_name"
            android:visibility="gone"
            android:id="@+id/img_add_party_name_green_tick"
            android:background="@drawable/green_tick"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@+id/add_case_number_card"
            app:layout_constraintRight_toRightOf="@+id/add_case_number_card"
            android:visibility="gone"
            android:id="@+id/add_case_number_card_green_tick"
            android:background="@drawable/green_tick"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_text"
        android:textAllCaps="false"
        android:id="@+id/btn_add_case_continue"
        android:background="@drawable/rounded_yellow_background"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>